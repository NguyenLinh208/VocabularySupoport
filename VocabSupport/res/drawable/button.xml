<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >

		    <gradient
		        android:angle="270"
		        android:startColor="@color/button_pressed_start_color"
		        android:endColor="@color/button_pressed_end_color" />
		    <corners
		        android:radius="4dip" />
		    <stroke
		        android:width="2dip"
		        android:color="@color/button_stroke_color" />
		    <padding
		        android:right="8dip"
		        android:left="8dip"
		        android:top="8dip"
		        android:bottom="8dip" />

		</shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >

		    <gradient
		        android:angle="270"
		        android:startColor="@color/button_start_color"
		        android:endColor="@color/button_end_color" />
		    <corners
		        android:radius="4dip" />
		    <stroke
		        android:width="2dip"
		        android:color="@color/button_stroke_color" />
		    <padding
		        android:right="8dip"
		        android:left="8dip"
		        android:top="8dip"
		        android:bottom="8dip" />

		</shape>
    </item>
</selector>