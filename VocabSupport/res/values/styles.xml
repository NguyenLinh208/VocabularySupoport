<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:textSize">@dimen/medium</item>
    </style>

    <style name="WordDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ResultDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.0</item>
    </style>

</resources>